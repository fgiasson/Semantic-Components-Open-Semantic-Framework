<?xml version="1.0" encoding="utf-8"?>
<schema>
  <version>0.1</version>
  <prefLabel>Cosmo schema</prefLabel>
  
  <attributeList>
    <foaf_page>
      <prefLabel>web page</prefLabel>
      <description>Web page of the record</description>
      
      <allowedType>Object</allowedType>
      
      <allowedValue>
        <primitive>String</primitive>
      </allowedValue>
    </foaf_page>
    <foaf_thumbnail>
      <prefLabel>thumbnail</prefLabel>
      <description>Thumbnail image representing a record</description>
      
      <allowedType>Object</allowedType>
      
      <allowedValue>
        <primitive>String</primitive>
      </allowedValue>
      
      <displayControl>sImage</displayControl>
    </foaf_thumbnail>
    <cosmo_status>
      <prefLabel>publication status</prefLabel>
      <description>Cosmo publication status of the project</description>
      
      <allowedType>Object</allowedType>
      
      <allowedValue>
        <primitive>String</primitive>
      </allowedValue>
    </cosmo_status>
    <cosmo_category>
      <prefLabel>Category</prefLabel>
      <description>Name of the Cosmo category</description>
      
      <allowedType>Object</allowedType>
      
      <allowedValue>
        <primitive>String</primitive>
      </allowedValue>
    </cosmo_category>   
    <cosmo_firstPosted>
      <prefLabel>first time posted</prefLabel>
      <description>The first time an attribute has been posted in the semantic sweet tools list</description>
      
      <allowedType>Object</allowedType>
      
      <allowedValue>
        <primitive>String</primitive>
      </allowedValue>
    </cosmo_firstPosted>
    <cosmo_updateDate>
      <prefLabel>update date</prefLabel>
      <description>Date of the last time this item has been updated in the semantic sweet tools list</description>
      
      <allowedType>Object</allowedType>
      
      <allowedValue>
        <primitive>String</primitive>
      </allowedValue>
    </cosmo_updateDate>   
    <cosmo_language>
      <prefLabel>programming language</prefLabel>
      <description>Programming language used to develop this application</description>
      
      <allowedType>Object</allowedType>
      
      <allowedValue>
        <primitive>String</primitive>
      </allowedValue>
    </cosmo_language> 
    <cosmo_foss>
      <prefLabel>open source status</prefLabel>
      <description>Free and open source status of the application</description>
      
      <allowedType>Object</allowedType>
      
      <allowedValue>
        <primitive>String</primitive>
      </allowedValue>
    </cosmo_foss>     
  </attributeList>
</schema>